
body {
	margin: 0px;
	padding: 0px;
	background: #FFF url(<%= asset_path 'bg-x.png'%>) top repeat-x;
	font: 11pt Arial;
}

span {
	font-size: 8pt;
	color: #badef7;
}

#top {
	background: url(<%= asset_path 'top-bg-x.png'%>) repeat-x;
	height: 53px;
	text-align: right;
	line-height: 12pt;	
	color: #badef7;
}

a:link, a:visited, a:active {
	background:none;
	text-decoration: none;
}

a:hover {
	color:black;
	text-decoration: underline;	
}

#top a:link, #top a:visited, #top a:active {
	background:none;
	text-decoration: none;
	color:#94cff7;
	font-weight: bold;
}

#top a:hover {
	text-decoration: none;
	color:#FFF;
}

#nav {
	background: url(<%= asset_path 'nav-bg-x.png'%>) repeat-x;
	height: 92px;
}

#links {
	padding-top: 40px;
}

#links a:link, #links a:visited, #links a:active {
	text-decoration: none;
	text-transform: uppercase;
	padding: 0 0 0 40px;
	letter-spacing: 0.5px;
	color: #FFF;
	background: none;
}

#links a:hover {
	color: #b4dbf6;
}

#banner {
	height: 194px;
	vertical-align: middle;
	text-align: center;
	overflow: none;
	position:reative;
	width:850px;
}

#banner_wrapper {
	width: 100%;
	background: url(<%= asset_path 'banner-bg-x.png'%>) repeat-x;	
}

#container {
	width: 850px;
	text-align: left;
}

#left_content {
	float:left;
	width:200px;
	border-right: 1px solid #A0A0A0;
	min-height: 400px;
	font-size: 9pt;
	line-height: 22px;
}

#right_content {
	float:right;
	width:620px;
}

.item {
	font-size: 11pt;
	color: black;
	font-style: italic;
	font-weight: bold;
}

.wrap_box {
    overflow: auto;
	width: 590px;
	position: relative;
}

.dash_box {
	-moz-border-radius: 15px;
	border-radius: 15px;
	border: 1px solid gray;
	margin:5px;
	padding: 5px;
	width: 270px;
	text-align: center;
	min-height: 65px;
}

.dash_box p {
	padding: 0px 10px;
	text-align: left;
}

.dash_box ul {
	margin: 0;
	padding-left: 35px;
	text-align: left;
    list-style: circle;  
}

.big_link {
	font-size:16pt;
	color: gray;
}
.big_link:hover {
	color: #2177b0;
	text-decoration: none;
}

.big_text {
	font-size: 16pt;
	color:green;
}

input.login {
	-moz-border-radius: 8px;
  	-webkit-border-radius: 8px;
  	border-radius: 8px;
  	padding: 3px;
  	margin-top: 8px;
}

h1 {
	font-weight: normal;
	font-size: 14pt;
	line-height: 24pt;
	text-align: right;
	letter-spacing: 1pt;
	border-bottom: 1px solid #D1D1D1;
	text-transform: uppercase;
}

h2 {
	margin:12px 0 0 0;
	padding-bottom: 3px;
	font-weight: normal;
	color: #2d2d2d;
	letter-spacing: -.5px;
	border-bottom: 1px solid #D1D1D1;
}

h3 {
	margin:0 5px 10px 0;
	text-align: right;
	color: #2177b0;
	font-size: 10pt;
	text-transform: uppercase;
	letter-spacing: 0.5px;
	border-bottom: 1px solid #DADADA;
}

h4 {
	font-weight: normal;
	font-size: 14pt;
}

.hdr_icon {
	margin: 15px 10px;
	border: 2px solid #d9d9d9;
	height: 140px;
}

table {
	margin: 0;
	padding: 0;
	border-collapse : collapse; 
}

.std_fmt {
	width: 615px;
}
.std_fmt td, .std_fmt th {
	//border: 1px solid gray;
	padding: 7px;
	border-bottom: 1px solid #d0d0d0;
}

.right {
	text-align: right;
}

.left: {
	text-align: left;
}