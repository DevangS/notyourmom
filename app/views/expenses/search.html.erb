<% if @expenses.count > 0 %>
    <table class="std_fmt">
      <tr>
        <th>Item</th>
        <th>Description</th>
        <th>Price</th>
        <th>By</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.item %></td>
        <td><%= expense.description %></td>
        <td>$<%= expense.price %></td>
        <td><%= expense.user.firstName %></td>
        <td><%= link_to 'Details', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Delete', expense, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
    </table>
<% else %>
    <br />
        <div style="text-align:center"><span class="big_link">There are no matching results.</span></div>   
    <br />
<% end %>