<!DOCTYPE html>
<html>
<head>
  <title>Notyourmom</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<link rel="stylesheet" type="text/css" href=<%= asset_path 'main.css'%>>
	<script src="javascripts/jquery-1.6.1.min.js" type="text/javascript"></script>

	<% content_for :banner do %>
	<div id="banner_wrapper">
		<div id="banner">
			<div style="float:left;width:260px;text-align:right">
				<br />
				<h2>Simplify your Life</h2><br />
				Create, split, and manage expenses the easy way. <br /><br />
				<a href="#">Read More</a>
			</div>
			<img class="hdr_icon" src=<%= asset_path 'user1.jpg'%> />
			<img class="hdr_icon" src=<%= asset_path 'user2.jpg'%> />
			<img class="hdr_icon" src=<%= asset_path 'user3.jpg'%> />
		</div>
	</div>
	<% end %>

	<% content_for :side_bar do %>
		<div id="left_content">
			<br />
			<h3>Recent Activity</h3>
			Bulat paid you <b>$50.75</b> for <i>Utilities</i>
			Theresa paid you <b>$350.00</b> for <i>Rent</i>
			Tanya commented on <i>Rent</i> "Boo!!"

			<br /> <br /> 
			<h3>Jump to</h3>
			<%= link_to "Households", households_path %> <br />
			<%= link_to "Users", users_path %> <br />
			<%= link_to "Expenses", expenses_path %> <br />
			<%= link_to "Debts", debts_path %> <br />
			<%= link_to "Contest Expense", comments_path %>
		</div>
	<% end %>

</head>
<body>

<div align="center">
	<div id="container">
		<div id="top">
			<% if user_signed_in? %>
				Welcome <%=current_user.firstName %>! <br />
	    		<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
	    	<% else %>
				<!-- LOGIN -->
				<form id="login" action="/login">
					<b>Please log in</b> 
					<input type="text" class="login" size="14" placeholder="e-mail" />
					<input type="text" class="login" size="14" placeholder="password" /><br />
					<span>Not a member yet? <%= link_to "Signing up is easy!", new_user_registration_path %></span>
				</form>
			<% end %>
		</div>
		<div id="nav">
			<img align="left" src=<%= asset_path 'noyomo2.png'%> />
			<div id="links">
				<a href="/">Home</a>
				<%= link_to "Household", households_path %> 
				<%= link_to "Expenses", expenses_path %> 
				<a href="?">Agenda</a>  
				<%= link_to "Users", users_path %> 
			</div>
		</div>
	</div>
<%page=request.env['PATH_INFO']%>
<%	if page == "/" || page == "/home/index" %>
		<%=yield :banner %>
<%	end %>

	<div id="container">
		<%=yield :side_bar %>
		<div id="right_content">	
			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>
			<%= yield %>
					
		</div>
	</div>
</div>
</body>
</html>
