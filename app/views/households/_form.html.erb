<center>
<p align="left">Change household name or change head of household!<br /><br /> 
</p>
<div style="text-align:left;width:60%;">
<%= form_for(@household) do |f| %>
  <% if @household.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@household.errors.count, "error") %> prohibited this household from being saved:</h2>

      <ul>
      <% @household.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :head %><br/>
    <%= f.select :head_id, @household.members.map {|member| [member.full_name, member.id] }  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
</center>
