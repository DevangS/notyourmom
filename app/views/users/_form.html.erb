<center>
<p align="left">You are in household: <b><%= link_to @user.household.name, households_path %></b><br />
  Last logged in: <%=@user.last_sign_in_at%><br /> 
</p>
<div style="text-align:left;width:60%;">

    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :first_Name %><br />
        <%= f.text_field :firstName %>
      </div>
      <div class="field">
        <%= f.label :last_Name %><br />
        <%= f.text_field :lastName %>
      </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.text_field :email %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>

  </div>
</center>