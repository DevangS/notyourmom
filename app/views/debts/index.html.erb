<h1>Listing debts</h1>

<table>
  <tr>
    <th>Percentage owed</th>
    <th>Paid</th>
    <th>User</th>
    <th>Expense</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @debts.each do |debt| %>
  <tr>
    <td><%= debt.percentage_owed %></td>
    <td><%= debt.paid %></td>
    <td><%= debt.user %></td>
    <td><%= debt.expense %></td>
    <td><%= link_to 'Show', debt %></td>
    <td><%= link_to 'Edit', edit_debt_path(debt) %></td>
    <td><%= link_to 'Destroy', debt, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

