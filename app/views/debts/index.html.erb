<h1>Outstanding Debts</h1>

<% if @debts.count > 0 %>
      <% @debts.each do |debt| %>
        <div class="lg_dash_box float_left">
          <div class="center">You owe <b><%= debt.expense.user.firstName %></b> 
            $<%= (debt.percentage_owed*debt.expense.price/100).round(2)%> of $<%= debt.expense.price %> 
            for <b><span title="<%= debt.expense.description %>"><%= debt.expense.item %></span></b>
          </div>
        </div>
        <div class="float_right" style="margin-right:20px;margin-top:25px;">
            <a href="#">Pay</a>&nbsp;&nbsp;or&nbsp;&nbsp;
            <span id="text<%=debt.id %>" class="hand" onclick="toggleComment('<%=debt.id %>')">Contest</span>
        </div>
        <div id="debt<%=debt.id %>" class="float_right hidden">
          <div class="float_left"><textarea id="box<%=debt.id %>" onfocus="setFocus('box<%=debt.id %>')" onblur="remFocus('box<%=debt.id %>')" class="expense_cmt_box"></textarea></div>
          <div class="float_right">&nbsp;&nbsp;&nbsp;&nbsp;<input class="button big_link hand" type="button" value="POST" /></div>
        </div> 
      <% end %>
<% else %>
    <br />
    <div style="text-align:center"><span class="big_link">You do not have any outstanding debts.</span></div>
    <br />
<% end %>

<br />
<% if @debts_paid.count > 0 %>
  <div style="overflow:visible;display:inline-block;">
  <h1>Debts Paid</h1>
      <% @debts_paid.each do |debt| %>
        <div class="lg_dash_box float_left">
          <div class="center">You owe <b><%= debt.expense.user.firstName %></b> 
            $<%= (debt.percentage_owed*debt.expense.price/100).round(2)%> of $<%= debt.expense.price %> 
            for <b><span title="<%= debt.expense.description %>"><%= debt.expense.item %></span></b>
          </div>
        </div>
        <div class="float_right" style="margin-right:20px;margin-top:25px;">
            &nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'View Details', debt.expense %>
        </div>
      <% end %>
  </div>
<% end %>
<br />
