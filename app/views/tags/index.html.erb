<h1>Tags</h1>
<% if @tags.count > 0 %>
    <table class="std_fmt">
      <tr>
        <th>Tag</th>
        <th></th>
        <th></th>
      </tr>
      <% @tags.each do |tag| %>
          <tr>
            <td><%= tag.name %></td>
            <td><%= link_to 'Details', tag %></td>
            <td><%= link_to 'Destroy', tag, confirm: 'Are you sure?', method: :delete %></td>
          </tr>
      <% end %>
    </table>
<% else %>
    <br />
    <div style="text-align:center"><span class="big_link">You do not have any outstanding payments.</span></div>
    <br />
<% end %>